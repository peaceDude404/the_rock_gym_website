#drop{
    display: flex;
    flex-wrap: wrap;
    width: 50%;
    padding-bottom: 15px;
    height: 40px;
    width: 95%;  
    border-radius: 7px;
    outline: none;
    border: 1px solid grey;
    padding: 0 10px;
}

.container{
    width: 100%;
    max-width: 650px;
    background-color: rgba(0, 0, 0, 0.5);
    padding: 28px;
    margin: 0 28px;
    border-radius: 10px;
    box-shadow: inset -2px 2px 2px white;
}

.form-title{
    font-size: 26px;
    font-weight: 600;
    text-align: center;
    padding-bottom: 6px;
    color: white;
    text-shadow: 2px 2px 2px black;
    border-bottom: solid 1px white;   
}

.main-user-info{
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    padding: 20px 0;

}

.user-input-box:nth-child(2n){
    justify-content: end;
}

.user-input-box{
    display: flex;
    flex-wrap: wrap;
    width: 50%;
    padding-bottom: 15px;
}

.user-input-box label{
    width: 95%;
    color: white;
    font-size: 20px;
    font-weight: 400;
    margin: 5px 0;
}

.user-input-box input{
    height: 40px;
    width: 95%;  
    border-radius: 7px;
    outline: none;
    border: 1px solid grey;
    padding: 0 10px;
}

.form-submit-btn input{
    cursor: pointer;
    display: block;
    width: 100%;
    margin-top: 10px;
    font-size: 20px;
    padding: 10px;
    border: none;
    border-radius: 3px;
    color: rgb(209, 209, 209);
    background: rgba(63, 114, 76, 0.7);
}

.form-submit-btn{
    margin-top: 40px;
}

.form-submit-btn input :hover{
    background: rgba(56, 204, 93, 0.7);
    color: rgb(255,255,255);
}

@media(max-width: 600px){
    .container{
        min-width: 280px;
    }

    .user-input-box{
        margin-bottom: 12%;
        width: 100%;
    }

    .user-input-box:nth-child(2n){
        justify-content: space-between;
    }
    .main-user-info{
        max-height: 380px;
        overflow: auto;

    }

    .main-user-info::-webkit-scrollbar{
        width: 0; 
    }
}
    </style>
    <div class="bg-image"></div>
    <div class="container">
        <h1 class="form-title">Update Gym Membership</h1>
        <form action="/editdata/<%=data._id%>" method="post">
            <div class="main-user-info">
                <div class="user-input-box">
                    <label for="Name">Name</label>
                    <input type="text" id="name" placeholder="Enter your name" value="<%=data.name%>" name="name" />
                </div>
                <div class="user-input-box">
                    <label for="Present Address">Present Address</label>
                    <input type="text" id="name" value="<%=data.address%>" placeholder="Enter your address" name="address" />
                </div>
                <div class="user-input-box">
                    <label for="Roll Number">Roll Number</label>
                    <input type="number" id="name" value="<%=data.rollno%>" placeholder="Enter your Roll number" name="rollno" />
                </div>
                <div class="user-input-box">
                    <label for="Date of Admission">Date of Admission</label>
                    <input type="date" id="name" value="<%=data.admission%>" placeholder="Enter your name" name="admission"/>
                </div>
                <div class="user-input-box">
                    <label for="Mobile Number">Mobile Number</label>
                    <input type="tel" id="name" value="<%=data.mobile%>" placeholder="Enter your mobile number" name="mobile" />
                </div>
                <div class="user-input-box">
                    <label for="Monthly Package">Monthly Package</label>
                    <select id="drop" name="package">
                        <option value="1 month">1 month</option>
                        <option value="3 months">3 months</option>
                        <option value="6 months">6 months</option>
                        <option value="12 months">12 months</option>
                    </select>
                </div>
                <div class="user-input-box">
                    <label for="Locker">Locker</label>
                    <input type="number" value="<%=data.locker%>" id="name" placeholder="Enter locker" name="locker"/>
                </div>
                <div class="user-input-box">
                    <label for="Timing">Timing</label>
                    <input type="time" id="name" value="<%=data.timing%>" placeholder="Enter your timing" name="timing"/>
                </div>
                <div class="user-input-box">
                    <label for="Image">Image</label>
                    <input type="file" id="name" onchange="readURL(this)" accept="Image" name="image"/>
                </div>
            </div>
            <div class="form-submit-btn">
                <input type="submit" value="Update">
            </div>
        </form>
    </div>
</body>
</html>